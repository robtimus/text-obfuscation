{
  "name": "text-obfuscation",
  "version": "1.0.0",
  "description": "Provides functionality for obfuscating text",
  "homepage": "https://github.com/robtimus/text-obfuscation",
  "bugs": {
    "url": "https://github.com/robtimus/text-obfuscation/issues"
  },
  "license": "Apache-2.0",
  "author": "Rob Spoor",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robtimus/text-obfuscation.git"
  },
  "scripts": {
    "compile": "tsc",
    "lint": "eslint ./src/**",
    "format": "prettier --write \"**/*.+(json|ts|tsx)\"",
    "format:check": "prettier --check \"**/*.+(json|ts|tsx)\"",
    "build": "npm run format:check && npm run lint && npm run compile",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/traverse": "^0.6.32",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "jest": "^27.5.1",
    "jest-each": "^27.5.1",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "prettier": {
    "printWidth": 180
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true
  },
  "dependencies": {
    "traverse": "^0.6.6"
  }
}
